{# src/AE/platformBundle/Resources/views/layout.php.twig #}

{% extends "::layout.php.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {% block aeplatform_header %}
    {% endblock %}
{% endblock %}

{% block body %}
    {% block navbar %}
        <!-- Barre de navigation -->
        <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header page-scroll">
                    <a style="margin-top: -50px;" class="navbar-brand" href="{{ path('dashboard_user') }}">
                        <img style="margin-top: 40px;" src="{{asset('img/logo_nav.png')}}"/>
                    </a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <form style="margin-top: 10px; margin-left: 10px;" class="inline-form">
                                <div class="input-group form-group">
                                    <input name="q" placeholder="Go to a Website">
                                    <button type="button" aria-label="Left Align">
                                        <span class="input-group-addon glyphicon glyphicon-search" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </form>
                        </li>
                        <li><a href="{{ path('fos_user_profile_show') }}">Mon compte</a></li>
                        <li><a href="{{ path('fos_user_profile_edit') }}">Modifier mon profil</a></li>
                        <li><a href="{{ path('entreprise_user') }}">Mon entreprise</a></li>
                        <li><a href="#">Aide</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endblock navbar %}

    <div id="container">
        <div class="raw" style="margin-left: 40px;">
            <h1><a href="{{ path('dashboard_user') }}">Accueil</a></h1>
        </div>
        <div class="raw" style="margin-top: 40px;">
            <section class="col-lg-2 col-md-2 col-sm-3" style="text-align: center">
                <ul class="list-unstyled" >
                    <li><a href="#">Livre de recettes</a></li><hr>
                    <li><a href="#">Registre des achats</a></li><hr>
                    <li><a href="#">Facturation</a></li><hr>
                    <li><a href="#">Compte bancaire</a></li><hr>
                    <li><a href="#">Devis</a></li>
                </ul>
            </section>
            {# On d√©finit un nouveau bloc, que les vues du bundle pourront remplir #}

            <section class="col-lg-10 col-md-10 col-sm-7">
                {% block aeplatform_body %}
                {% endblock %}
            </section>
        </div>

    </div>


{% endblock %}

{%  block javascript %}
    {{ parent() }}
    <script src="{{ asset('bootstrap/js/clean-blog.min.js') }}"></script>
    {% block aeplatform_script %}
    {% endblock %}
{% endblock %}