{% extends "::layout.php.twig" %}

{% block navbar %}
    <div class="row" style="margin-top: 20px; margin-left: 30px;">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <a href="{{ path('dashboard_user') }}">
                <img src="{{asset('img/logo_nav.png')}}"/>
            </a>
        {% else %}
            <a href="{{ path('page_d_accueil') }}">
                <img src="{{asset('img/logo_nav.png')}}"/>
            </a>
        {% endif %}

        <div class="navbar-right" style="margin-right: 30px;">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
        </div>
    </div>
{% endblock navbar %}

{% block header %}
{% endblock %}

{% block body %}

{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}" style="margin-left: 20px; margin-top: 30px;">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}

<div>
    {% block fos_user_content %}
    {% endblock fos_user_content %}
</div>
{% endblock body %}

